<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".PatientRegisterActivity">
  <TextView
      android:id="@+id/patient_registration_form"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/gothic"
      android:text="Registration Form"
      android:textColor="@color/grayButtons"
      android:textSize="35sp"
      android:textAlignment="center"
      />
  <TextView
      android:id="@+id/personal_details_line"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/patient_registration_form"
      android:layout_marginTop="15dp"
      android:background="@color/colorPrimary"
      android:fontFamily="@font/gothic"
      android:text="Personal Details"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      android:paddingLeft="30dp"
      />
  <EditText
      android:id="@+id/name_with_initials"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/personal_details_line"
      android:hint="Name With Initials"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="text"
    />
  <EditText
      android:id="@+id/full_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/name_with_initials"
      android:hint="Full Name"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="text"
      />
  <EditText
      android:id="@+id/address"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/full_name"
      android:hint="Address"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="text"
      />
  <EditText
      android:id="@+id/birthday"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/address"
      android:hint="Birthday"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="date"
      />
  <EditText
      android:id="@+id/register_email_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/birthday"
      android:hint="Your Email Address"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="textEmailAddress"
      />
  <EditText
      android:id="@+id/register_phone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/register_email_input"
      android:hint="Mobile Number"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="phone"
      />
  <EditText
      android:id="@+id/register_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/register_phone"
      android:hint="Password"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="textPassword"
      />
  <EditText
      android:id="@+id/register_password_confirm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/register_password"
      android:hint="Confirm Password"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:inputType="textPassword"
      />
  <Button
      android:id="@+id/register_next_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_below="@id/register_password_confirm"
      android:background="@drawable/input_design"
      android:layout_marginTop="20dp"
      android:text="Next"
      android:textSize="25dp"
      android:textColor="@color/colorPrimaryDark"
      android:padding="20dp"
    />

  </RelativeLayout>