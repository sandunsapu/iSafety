<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".Patient.PatientRegister4Activity">

    <TextView
        android:id="@+id/patient_registration_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic"
        android:text="Registration Form"
        android:textColor="@color/grayButtons"
        android:textSize="35sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/emergency_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_registration_form"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/gothic"
        android:text="Emergency Contacts"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingLeft="30dp"
        />

    <TextView
        android:id="@+id/person1_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergency_contacts"
        android:text="Person 01"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:id="@+id/name_person1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person1_details"
        android:hint="Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/email_address_person1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_person1"
        android:hint="Email Address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/mobile_number_person1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_address_person1"
        android:hint="Mobile Number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="phone"
        />
    <TextView
        android:id="@+id/person2_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_number_person1"
        android:text="Person 02"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <EditText
        android:id="@+id/name_person2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person2_details"
        android:hint="Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/email_address_person2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_person2"
        android:hint="Email Address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/mobile_number_person2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_address_person2"
        android:hint="Mobile Number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="phone"
        />

    <TextView
        android:id="@+id/person3_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_number_person2"
        android:text="Person 03"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <EditText
        android:id="@+id/name_person3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person3_details"
        android:hint="Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/email_address_person3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_person3"
        android:hint="Email Address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/mobile_number_person3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_address_person3"
        android:hint="Mobile Number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="phone"
        />

    <Button
        android:id="@+id/register_next_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/mobile_number_person3"
        android:background="@drawable/input_design"
        android:text="Next"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="15dp"
        android:textAllCaps="false"
        />
</RelativeLayout>