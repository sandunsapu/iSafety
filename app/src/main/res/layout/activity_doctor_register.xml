<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DDD8B8"
    tools:context=".PatientRegisterActivity">
    <TextView
        android:id="@+id/doctor_registration_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic"
        android:text="Registration Form"
        android:textColor="@color/grayButtons"
        android:textSize="35sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/personal_details_line_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_registration_form"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/gothic"
        android:text="Personal Details - Doctor"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingLeft="30dp"
        />
    <EditText
        android:id="@+id/doctor_name_with_initials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_details_line_doctor"
        android:hint="Name With Initials"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/doctor_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_name_with_initials"
        android:hint="Full Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/doctor_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_full_name"
        android:hint="Address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/doctor_register_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_address"
        android:hint="Your Email Address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/doctor_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_register_email_input"
        android:hint="Mobile Number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/doctor_area_working"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_register_phone"
        android:hint="Area Currently Working"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/doctor_registration_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_area_working"
        android:hint="Doctor Registration Number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/register_password_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_registration_number"
        android:hint="Password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/doctor_register_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password_doctor"
        android:hint="Confirm Password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/doctor_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/doctor_register_password_confirm"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        />

</RelativeLayout>